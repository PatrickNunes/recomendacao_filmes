<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link href="/css/login.css" rel="stylesheet">
</head>

<body class="d-flex align-items-center py-4 text-bg-dark">
    <main class="form-signin w-100 m-auto">
        <form method="POST" action="/login">
            <h1 class="mb-3">Filmax</h1>
            <h1 class="h3 mb-4 fw-normal">Digite as credenciais</h1>

            <div class="form-floating">
                <input type="email" name="email" class="form-control" placeholder="">
                <label for="floatingInput">e-mail</label>
            </div>
            <div class="form-floating mb-4">
                <input type="password" name="senha" class="form-control" placeholder="">
                <label for="floatingPassword">senha</label>
            </div>
            <button class="btn btn-outline-light w-100 py-2 mb-4" type="submit">Entrar</button>
            <% if(errorMessage) { %>
            <div class="alert alert-danger text-center" role="alert">
                <%= errorMessage %>
            </div>
            <% } %>
            <p class="mt-5 mb-3 text-center text-body-secondary">&copy; 2025</p>
        </form>
    </main>
</body>

</html>